<main role="main">
    <section class="jumbotron text-center jumbotron-bg row">
        <h1>Booking App</h1>
        <p class="lead text-muted">
        Break out of your shell and do something different
        </p>
        <div class="container">
            <div class="form-horizontal">
                <%= form_tag search_path, class: "form-group",  method: :get do %>
                    <div class="form-group">
                        
                        <div class="col-md-6">
                            <%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: "form-control ", id: "autolocation" %>
                        </div>
                        <div class="col-md-3">
                            <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control form-control-sm datepicker" %>
                        </div>
                        <div class="col-md-3">
                            <%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control form-control-sm datepicker" %>
                        </div>
                        
                    </div>
                    <br>
            
                    <div class="row">
                        <div class="col-md-offset-4 col-md-4">
                            <%= submit_tag "Search", class: "btn btn-lg btn-submit btn-round btn-primary" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </section>

    <!-- Homes/rooms -->

    <div>
        <h3>Homes</h3>
    </div>
    <br>
    <div class="row">
    <%= render partial: "rooms/rooms_list", locals: {rooms: @rooms} %>
    </div>

    <!-- Cities -->
    <div>
        <h3>Cities</h3>
    </div>
    <br>

    <div class="row">
        <div class="col-md-3 col-sm-12">
            <a href="http://localhost:3000/search?search=london">
                <div class="discovery-card"></div>
            </a>
        </div>
        <div class="col-md-3 col-sm-12">
            <a href="http://localhost:3000/search?search=london">
                <div class="discovery-card"></div>
            </a>
        </div>
        <div class="col-md-3 col-sm-12">
            <a href="http://localhost:3000/search?search=london">
                <div class="discovery-card"></div>
            </a>
        </div>
        <div class="col-md-3 col-sm-12">
            <a href="http://localhost:3000/search?search=london">
                <div class="discovery-card"></div>
            </a>
        </div>
    </div>
</main>

<script>
        $(function() {
            $("#autolocation").geocomplete();
        })
</script>