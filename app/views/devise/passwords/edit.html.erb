<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Change your password</h2>
    <br>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New Password", class: "form-control"  %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm New Password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class="btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
