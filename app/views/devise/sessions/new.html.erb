<div class="container" style="margin-top: 75px">
  <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h2 class="text-center primary">Log in</h2>
        <br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
          </div>

          <div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %> Remember Me
              </div>
            <% end %>
            <span class="pull-right">
              <%= link_to "Forgot Password", new_user_password_path %>
            </span>
          </div>

          

          <div class="actions">
            <%= f.submit "Log in", class: "btn" %>
          </div>
        <% end %>
        <br>
        <%= link_to '<i class="fa fa-facebook-square"></i>   Sign in with Facebook'.html_safe, user_facebook_omniauth_authorize_path, class: 'btn facebook' %>

      </div>
  </div>
</div>

