<div class="container">
    <div class="row" style="margin-top: 30px;">
        <div class="col-md-3">
            <h3>Manage Your Account</h3>
            <br>
            <ul class="sidebar-list">
                <li class="sidebar-item"><%= link_to "Your Listings", rooms_path, class: "sidebar-link active"  %></li>
                <li class="sidebar-item"><%= link_to "Your Hosted Bookings", your_reservations_path, class: "sidebar-link"  %></li>
                <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link"  %></li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="panel panel-default" style="margin-top: 50px;">
                <div class="panel-heading secondary-header text-center">
                    <h4>Your Listings</h4>
                </div>
                <div class="panel-body">

                    <% @rooms.each do |room|%>
                        <div class="row">
                            <div class="col-md-2">
                                <% if room.images.length > 0 %>
                                    <%= image_tag room.images[0], class: "img-thumbnail" %>
                                <% else %>
                                    <%= image_tag "blank.jpg", class: "img-thumbnail" %>
                                <% end %>
                            </div>
                            <div class="col-md-7">
                                <h4><%= room.listing_name %></h4>
                            </div>
                            <div class="col-md-3 right">
                                <%= link_to "Update", listing_room_path(room), class: "btn btn-lg" %>
                            </div>
                        </div>
                        <hr>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>