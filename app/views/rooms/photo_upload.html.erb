<div class="container">
    <div class="row" style="margin-top: 30px;">
        <div class="col-md-3">
            <%= render 'room_menu' %>
        </div>
        <div class="col-md-9"style="margin-top: 50px;">
            <div class="panel panel-default">
                <div class="panel-heading secondary-header text-center">
                    <h4>Photos</h4>
                </div>
                <div class="panel-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-6">
                                <%= form_for @room do |f| %>
                                    <div class="row">
                                        <div class="form-group">
                                            <span class="btn btn-default btn-file">
                                                Select Photos
                                                <%= f.file_field :images, multiple: true, class: "form-control", required: true %>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <%= f.submit "Add Photos", class: "btn btn-default" %>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                        <div id="photos"><%= render 'photos_list' %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>