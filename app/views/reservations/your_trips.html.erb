<div class="container">
<div class="row" style="margin-top: 30px;">
    <div class="col-md-3">
        <h3>Manage Your Account</h3>
        <br>
        <ul class="sidebar-list">
            <li class="sidebar-item"><%= link_to "Your Listings", rooms_path, class: "sidebar-link"  %></li>
            <li class="sidebar-item"><%= link_to "Your Hosted Bookings", your_reservations_path, class: "sidebar-link"  %></li>
            <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link active"  %></li>
        </ul>
    </div>
    <div class="col-md-9" style="margin-top: 50px;">
        <div class="panel panel-default">
            <div class="panel-heading secondary-header text-center">
                <h4>Your Trips</h4>
            </div>
            <div class="panel-body">
                <% @trips.each do |trip|%>
                    <div class="row">
                        <div class="col-md-2">
                            <%= trip.start_date.strftime('%D')%>
                        </div>
                        <div class="col-md-2">
                            <%= link_to room_path(trip.room) do %>
                                <% if trip.room.images.length > 0 %>
                                    <%= image_tag trip.room.images[0], class: "img-thumbnail" %>
                                <% else %>
                                    <%= image_tag "blank.jpg", class: "img-thumbnail" %>
                                <% end %>
                            <% end %>
                        </div>
                        <div class="col-md-5">
                            <span>
                                <%= image_tag avatar_url(trip.room.user), class: "img-circle avatar-small" %>
                                <%= link_to user_path(trip.room.user) do %>
                                    <%= trip.room.user.fullname %>
                                <% end %>
                            </span>
                            <br>
                            <br>
                            <%= link_to trip.room.listing_name, room_path(trip.room) %>
                        </div>
                        <div class="col-md-3 text-right">
                            <%= render partial: "reviews/guest_form", locals: {reservation: trip} %>
                        </div>
                    </div>
                    <hr>
                <% end %>
            </div>
        </div>
    </div>
</div>
</div>