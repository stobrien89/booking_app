<div class="row">
    <div class="col-md-3">
        <ul class="sidebar-list">
            <li class="sidebar-item"><%= link_to "Your Listings", rooms_path, class: "sidebar-link active"  %></li>
            <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link active"  %></li>
            <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link active"  %></li>
        </ul>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                Your Reservations
            </div>
            <div class="panel-body">

                <% @rooms.each do |room| %>
                    <% room.reservations.each do |reservation| %>
                        <div class="row">
                        <div class="col-md-2">
                            <%= reservation.start_date.strftime('%D') %>
                        </div>
                        <div class="col-md-2">
                            <%= link_to room_path(reservation.room) do %>
                                <% if reservation.room.images.length > 0 %>
                                    <%= image_tag reservation.room.images[0], class: "img-thumbnail" %>
                                <% else %>
                                    <%= image_tag "blank.jpg", class: "img-thumbnail" %>
                                <% end %>
                            <% end %>
                        </div>
                        <div class="col-md-5">
                            <%= link_to reservation.room.listing_name, room_path(reservation.room) %><br/>
                            <span>
                                <%= link_to user_path(reservation.user) do %>
                                    <%= image_tag avatar_url(reservation.user), class: "img-circle avatar-small" %>&nbsp;
                                    <%= reservation.user.fullname %>
                                <% end %>
                            </span>
                        </div>
                         <div class="col-md-3 text-right">
                            <%= render partial: "reviews/host_form", locals: {reservation: reservation} %>
                        </div>
                        </div>
                        <hr/>

                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>