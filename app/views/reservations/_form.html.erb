<div class="panel panel-default">
    <div class="panel-heading">
        <span>$<strong><%= @room.price %></strong> / night</span>
        <span class="pull-right"><i class="fa fa-star">&nbsp;</i><%= @room.average_rating %> (<%= @room.guest_reviews.count %>)</span>
    </div>
    <div class="panel-body">
        <%= form_for([@room, @room.reservations.new]) do |f| %>
           <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <label>Check In</label>
                    <%= f.text_field :start_date, class: " datepicker form-control" %>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <label>Check Out</label>
                    <%= f.text_field :end_date, class: " datepicker form-control" %>
                </div>

                <div id="preview" style="display: none">
                    <table class="reservation-table">
                        <tbody>
                            <tr>
                                <td>Price</td>
                                <td class="text-right">$<%= @room.price %></td>
                            </tr>
                            <tr>
                                <td>Nights</td>
                                <td class="text-right"><span id="reservation_days"></span></td>
                            </tr>
                            <tr>
                                <td>Total</td>
                                <td class="text-right total">$<span id="reservation_total"></span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
           </div>
            <br>
        <%= f.submit "Book now", class: "btn btn-default" %>
<% end %>
    </div>
</div>


